{
  "name": "scrolli-business-intelligence",
  "version": "1.0.0",
  "private": true,
  "description": "Scrolli Business Intelligence & Research Excellence - Monorepo",
  "workspaces": [
    "next",
    "strapi"
  ],
  "scripts": {
    "dev": "cd next && npm run dev",
    "dev:next": "cd next && npm run dev",
    "dev:strapi": "cd strapi && npm run develop",
    "build": "cd next && npm run build",
    "build:next": "cd next && npm run build",
    "build:strapi": "cd strapi && npm run build",
    "start": "cd next && npm run start",
    "lint": "cd next && npm run lint",
    "install:all": "cd next && npm install && cd ../strapi && npm install",
    "clean": "cd next && rm -rf .next node_modules && cd ../strapi && rm -rf .cache build node_modules"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Scrollico/official_business_scrolli.git"
  },
  "keywords": [
    "nextjs",
    "strapi",
    "business-intelligence",
    "monorepo"
  ],
  "author": "",
  "license": "MIT"
}
